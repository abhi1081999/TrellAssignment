<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VideoPlayingActivity"
        android:padding="20dp"
        android:orientation="vertical"
>
    <VideoView android:layout_width="match_parent" android:layout_height="253dp"
               android:id="@+id/play"

    />
    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/bit"
              android:hint="Enter BitRate"

    />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="Compress It"
            android:id="@+id/compression"
            android:layout_marginTop="20dp"
    />

    <VideoView android:layout_width="352dp" android:layout_height="226dp"
               android:id="@+id/CompressV"

    />

</LinearLayout>